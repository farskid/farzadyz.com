{
  "name": "farzadyz.com",
  "description": "Personal website owned by Farzad Yousefzadeh",
  "version": "2.0.0",
  "scripts": {
    "dev": "yarn build && sapper dev",
    "build": "yarn compile_content && sapper build",
    "compile_content": "node scripts/compileContent.js",
    "watch_content": "nodemon scripts/compileContent.js",
    "sapper_export": "sapper export",
    "copy_redirects": "node scripts/redirects.js",
    "after_export": "node scripts/afterExport.js",
    "export": "NODE_ENV=production run-s build sapper_export copy_redirects after_export",
    "start": "node __sapper__/build",
    "start_export": "serve __sapper__/export",
    "clean": "rm -rf __sapper__"
  },
  "engines": {
    "node": ">=14.15.4"
  },
  "devDependencies": {
    "@netlify/build": "^8.3.4",
    "netlify-cli": "^3.5.0",
    "serve": "^11.3.2",
    "svelte": "^3.17.3"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@github-docs/frontmatter": "^1.3.1",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-url": "^6.0.0",
    "@splitbee/web": "^0.2.4",
    "chalk": "^4.1.0",
    "classnames": "^2.2.6",
    "compression": "^1.7.1",
    "fs-extra": "^9.1.0",
    "highlight.js": "^10.5.0",
    "linkedom": "^0.3.6",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "polka": "next",
    "prettier": "^2.2.1",
    "prismjs": "^1.24.0",
    "reading-time": "^1.3.0",
    "remarkable": "^2.0.1",
    "remarkable-extlink": "^1.1.1",
    "rollup": "^2.38.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.29.0",
    "simple-git": "^2.35.0",
    "sirv": "^1.0.0",
    "slugify": "^1.4.6",
    "typography": "^0.16.19"
  },
  "merge-configs": {
    "rollup": {
      "scripts": {
        "build": "sapper build --legacy",
        "export": "sapper export --legacy"
      },
      "devDependencies": {
        "@babel/core": "^7.0.0",
        "@babel/plugin-syntax-dynamic-import": "^7.0.0",
        "@babel/plugin-transform-runtime": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@babel/runtime": "^7.0.0",
        "@rollup/plugin-babel": "^5.0.0",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@rollup/plugin-replace": "^2.2.0",
        "@rollup/plugin-url": "^5.0.0",
        "rollup": "^2.3.4",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0"
      }
    },
    "webpack": {
      "devDependencies": {
        "file-loader": "^6.0.0",
        "svelte-loader": "^2.9.0",
        "webpack": "^4.7.0",
        "webpack-modules": "^1.0.0"
      }
    }
  }
}
